                    [data-oe-field='body_html'] .oe_structure > div,
                    td, th
                "
                data-exclude=".o_mail_no_colorpicker">
                <li>
                    <a class="v_paste_value" tabindex="-1" href="#"><i class="fa fa-edit"/>Add Field Value</a>
                </li>
            </div>
        </xpath>
    </template>

