<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_markant_account" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.markant.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<div id="account_ocr_settings" position="after">
                <h2>Interim Account Journal</h2>
                <div class="row mt16 o_settings_container" id="account_interim_account_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane">
                        	<label for="interim_account_journal_id"/>
                            <div class="text-muted">
                                Select the Journal for Backdated Post
                            </div>
                            <div class="mt16">
                                <field name="interim_account_journal_id" class="o_light_label"/>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
